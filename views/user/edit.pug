extends ../layouts/common
block content
    h1 Edit User
    if errors
        each error in errors 
            .alert.alert-danger= error
    form.mt-5(action='/user/edit', method='post', enctype='multipart/form-data')
        input(type="hidden", name='_id' value= values ? values._id : "")
        .form-group.row
            label.col-form-label.col-sm-2(for='name') Name
            .col-sm-10
                input#name.form-control(type='text', name='name', value= values ? values.name : "")
        .form-group.row
            label.col-form-label.col-sm-2(for='phone') Phone
            .col-sm-10
                input#phone.form-control(type='text', name='phone', value= values ? values.phone : "")
        .form-group.row
            label.col-form-label.col-sm-2(for='avatar') Avatar
            .col-sm-10
                input#avatar.form-control-file(type='file', name='avatar')
        button.btn.btn-primary.mr-auto Save