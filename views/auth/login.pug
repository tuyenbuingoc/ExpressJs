extends ../layouts/common
block content
    h1 Login
    if errors
        each error in errors 
            .alert.alert-danger= error
    form.mt-5(method='post')
        .form-group.row
            label.col-form-label.col-sm-2(for='email') Email
            .col-sm-6
                input#email.form-control(type='email', name='email', value= values ? values.email : "")
        .form-group.row
            label.col-form-label.col-sm-2(for='password') Password
            .col-sm-6
                input#password.form-control(type='password', name='password', value= values ? values.password : "")
        button.btn.btn-primary.mr-auto Login
        a.ml-3(href="/auth/signup") Signup